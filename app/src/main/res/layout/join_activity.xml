<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="JOIN"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/infoLinkActName"
        android:gravity="center"
        android:text="ID"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoLinkActName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="18dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/joinActIdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/infoLinkActName"
        android:layout_below="@+id/infoLinkActName"
        android:layout_marginTop="9dp"
        android:text="아이디를 입력해주세요."
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/joinActPwdPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_marginBottom="10dp"
        android:text="8~20자리 영문,숫자, 특수문자 사용"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/infoLinkActEmailEdit"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/infoLinkActEmailEdit"
        android:gravity="center"
        android:text="비밀번호"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoLinkActEmailEdit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoLinkActName"
        android:layout_below="@+id/infoLinkActName"
        android:layout_marginTop="40dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/infoActPwd2"
        android:gravity="center"
        android:text="비밀번호확인"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoActPwd2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoLinkActEmailEdit"
        android:layout_below="@+id/infoLinkActEmailEdit"
        android:layout_marginTop="40dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password 확인"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/joinActPwdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/infoActEmail"
        android:layout_marginBottom="10dp"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/infoActEmail"
        android:gravity="center"
        android:text="E-Mail"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/joinActEmailConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="이메일을 입력해주세요."
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/infoActEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_below="@+id/infoActPwd2"
        android:layout_marginTop="40dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/infoActBirth"
        android:gravity="center"
        android:text="생년월일"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoActBirth"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoActEmail"
        android:layout_below="@+id/infoActEmail"
        android:layout_marginTop="40dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="8자리 ex) 19930825"
        android:inputType="number"
        android:maxLength="8"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/joinActBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/infoActBirth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#16092b"
        android:text="JOIN"
        android:textColor="#abcddd"
        android:textSize="20sp" />

</RelativeLayout>