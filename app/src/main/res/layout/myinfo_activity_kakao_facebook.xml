<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="My Info"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/infoLinkActName"
        android:gravity="center"
        android:text="Name"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoLinkActName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="60dp"
        android:background="#0c021a"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="회원 이름"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="E-mail"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_alignTop="@+id/frameLayout3"
        android:layout_toStartOf="@+id/frameLayout3" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/infoLinkActName"
        android:layout_alignStart="@+id/infoLinkActName"
        android:layout_marginTop="30dp"
        android:id="@+id/frameLayout3">

        <EditText
            android:id="@+id/infoLinkActEmailEdit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/infoLinkActName"
            android:layout_below="@+id/infoLinkActName"
            android:background="#0c021a"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:textColor="#abcddd"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoLinkActEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="이메일을 설정해주세요."
            android:textColor="#abcddd"
            android:textSize="15sp"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/infoLinkActEmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout4"
        android:layout_alignStart="@+id/frameLayout4"
        android:layout_marginBottom="5dp"
        android:text="이메일설정하기"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoLinkActEmailCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout4"
        android:layout_alignEnd="@+id/frameLayout4"
        android:layout_marginBottom="5dp"
        android:text="취소"
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="생년월일"
        android:textColor="#fff"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/frameLayout3"
        android:id="@+id/frameLayout4">

        <EditText
            android:id="@+id/infoLinkActBirthEdit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#0c021a"
            android:ems="10"
            android:hint="8자리 ex) 19930825"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="#abcddd"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoLinkActBirth"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/frameLayout3"
            android:layout_alignTop="@+id/textView13"
            android:gravity="center_vertical"
            android:text="생년월일을 설정해주세요."
            android:textColor="#abcddd"
            android:textSize="15sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/infoLinkActBirthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/infoLinkActLink"
        android:layout_alignStart="@+id/infoLinkActLink"
        android:layout_marginBottom="5dp"
        android:text="생년월일 설정하기"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoLinkActBirthCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/infoLinkActLink"
        android:layout_alignEnd="@+id/infoLinkActLink"
        android:layout_marginBottom="5sp"
        android:text="취소"
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="연동아이디"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoLinkActLink"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignStart="@+id/frameLayout4"
        android:gravity="center_vertical"
        android:textColor="#abcddd"
        android:textSize="15sp" />

    <Button
        android:id="@+id/infoLinkActBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/textView2"
        android:background="#16092b"
        android:text="확인"
        android:textColor="#abcddd"
        android:textSize="20sp" />

    <Button
        android:id="@+id/infoLinkActCancelBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:background="#16092b"
        android:text="취소"
        android:textColor="#abcddd"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/infoLinkActBtn"
        android:layout_toEndOf="@+id/textView2" />

</RelativeLayout>