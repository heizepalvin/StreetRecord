<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="오픈채팅방 만들기"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:freezesText="false"
        android:gravity="center"
        android:text="오픈채팅방 이름을 입력해주세요."
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/createChatActTitle"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="30"
        android:textColor="#B7F0B1" />

    <TextView
        android:id="@+id/createChatActTitleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="0/50"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="장르(주제)를 설정해주세요."
        android:textColor="#fff"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/createChatActGenreSpinner"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:entries="@array/genre"
        android:gravity="center" />

    <EditText
        android:id="@+id/createChatActGenreEdit"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="50"
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/createChatActGenreCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:text="0/50"
        android:textColor="#fff"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="채팅방 이미지를 설정해주세요."
        android:textColor="#fff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/createChatActImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logos" />

    <Button
        android:id="@+id/createChatActImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="이미지설정" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createChatActCreateBtn"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            android:text="방만들기" />

        <Button
            android:id="@+id/createChatActCancelBtn"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="취소" />

    </LinearLayout>

</LinearLayout>