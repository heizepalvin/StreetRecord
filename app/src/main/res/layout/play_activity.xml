<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playActMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/playlistwhite" />

        <ImageView
            android:id="@+id/playActInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/morewhite" />

        <ImageView
            android:id="@+id/playActFinish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/closewhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playActTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/playActArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Artist"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/playActImg"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="10dp" />

    <SeekBar
        android:id="@+id/playActSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/playActRepeatOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/repeatone" />

            <ImageView
                android:id="@+id/playActRepeat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/repeaton" />

            <ImageView
                android:id="@+id/playActRepeatOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/repeat" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/playActRandomOn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/random" />

            <ImageView
                android:id="@+id/playActRandomOff"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:srcCompat="@drawable/randomoff" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playActPre"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/prewhite" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/playActPause"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/pausewhite" />

            <ImageView
                android:id="@+id/playActPlay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:srcCompat="@drawable/playwhite" />
        </FrameLayout>

        <ImageView
            android:id="@+id/playActNext"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/nextwhite" />

    </LinearLayout>

</LinearLayout>