                <!--android:layout_marginLeft="15dp"-->
                <!--android:text="댓글 수"-->
                <!--android:id="@+id/contestActCommentCount"/>-->

                <!--</LinearLayout>-->
                <!---->

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>