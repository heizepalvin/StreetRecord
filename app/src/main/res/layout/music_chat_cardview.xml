                <!--android:layout_height="match_parent"-->
                <!--android:text="좋아요 수"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:id="@+id/contestActLikeCount"/>-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:text="댓글"-->
                <!--android:id="@+id/contestActComment"/>-->
