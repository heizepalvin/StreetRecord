<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="My Info"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/infoLinkActName"
        android:gravity="center"
        android:text="ID"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoLinkActName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="30dp"
        android:background="#0c021a"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="회원 아이디"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/infoActPwdPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLinkActEmailEdit"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="8~20자리 영문,숫자,특수문자사용"
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/infoLinkActEmailEdit"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/infoLinkActEmailEdit"
        android:gravity="center"
        android:text="비밀번호"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoLinkActEmailEdit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/infoLinkActName"
        android:layout_alignStart="@+id/infoLinkActName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/infoActPwd2"
        android:gravity="center"
        android:text="비밀번호확인"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoActPwd2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password 확인"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/infoActPwdPattern"
        android:layout_alignStart="@+id/infoActPwdPattern" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력하신 비밀번호로 변경됩니다."
        android:textColor="#FFA7A7"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="E-Mail"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoActPwdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2"
        android:layout_marginBottom="7dp"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_alignTop="@+id/textView7">

        <EditText
            android:id="@+id/infoActEmailEdit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#0c021a"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#abcddd"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoActEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/infoActPwd2"
            android:layout_below="@+id/infoActPwd2"
            android:background="#0c021a"
            android:gravity="center_vertical"
            android:text="회원 이메일"
            android:textColor="#abcddd"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/infoActEmailInputBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_below="@+id/frameLayout2"
        android:layout_marginTop="20dp"
        android:text="이메일변경하기"
        android:textColor="#B7F0B1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="생년월일"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_alignStart="@+id/textView7" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/frameLayout2"
        android:layout_below="@+id/infoActEmailInputBtn"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/infoActBirthEdit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#0c021a"
            android:ems="10"
            android:hint="8자리 ex) 19930825"
            android:inputType="number"
            android:textColor="#abcddd"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoActBirth"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/frameLayout"
            android:layout_alignTop="@+id/textView8"
            android:background="#0c021a"
            android:gravity="center_vertical"
            android:text="회원 생년월일"
            android:textColor="#abcddd"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />

    </FrameLayout>

    <Button
        android:id="@+id/infoActBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#16092b"
        android:text="확인"
        android:textColor="#abcddd"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/infoActEmailConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_alignTop="@+id/infoActEmailInputBtn"
        android:layout_marginEnd="10dp"
        android:text="취소"
        android:textColor="#B7F0B1"
        android:textSize="15sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/infoActCancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="#16092b"
        android:text="취소"
        android:textColor="#abcddd"
        android:textSize="20sp" />

</RelativeLayout>