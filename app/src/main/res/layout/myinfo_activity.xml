<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c021a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="My Info"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/infoActID"
        android:gravity="center"
        android:text="ID"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoActID"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="30dp"
        android:background="#0c021a"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="회원 아이디"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/infoActPwdPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_marginBottom="10dp"
        android:text="8~20자리 영문,숫자, 특수문자 사용"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/infoActPwd"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/infoActPwd"
        android:gravity="center"
        android:text="비밀번호"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoActPwd"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/infoActID"
        android:layout_alignStart="@+id/infoActID" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/infoActPwd2"
        android:gravity="center"
        android:text="비밀번호확인"
        android:textColor="#fff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/infoActPwd2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#0c021a"
        android:ems="10"
        android:hint="Password 확인"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/infoActPwd"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/infoActPwdConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/infoActEmail"
        android:layout_marginBottom="10dp"
        android:textColor="#B7F0B1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/infoActEmail"
        android:gravity="center"
        android:text="E-Mail"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoActEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/infoActPwd2"
        android:layout_below="@+id/infoActPwd2"
        android:layout_marginTop="20dp"
        android:background="#0c021a"
        android:text="회원 이메일"
        android:gravity="center_vertical"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/infoActBirth"
        android:gravity="center"
        android:text="생년월일"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/infoActBirth"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:background="#0c021a"
        android:gravity="center_vertical"
        android:text="회원 생년월일"
        android:textColor="#abcddd"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/infoActEmail"
        android:layout_alignStart="@+id/infoActEmail" />

    <Button
        android:id="@+id/infoActBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#16092b"
        android:text="확인"
        android:textColor="#abcddd"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

</RelativeLayout>